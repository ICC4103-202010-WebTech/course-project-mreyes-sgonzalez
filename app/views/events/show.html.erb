<p id="notice"><%= notice %></p>
<h1>Event</h1>
<link rel="stylesheet" type="text/css" href="event_id_view.css">

<div class="card mb-3" id="first-div-particular-event">
  <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
  <div class="card-body">
    <p class="card-text" id="text-div-blue"><%= "Title:"%></p>
    <p class="card-text" id="text-div-black"><%= @events.title %></p>
    <p class="card-text" id="text-div-blue"><%= "Description:"%></p>
    <p class="card-text" id="text-div-black"><%= @events.description %></p>
    <p class="card-text" id="text-div-blue"><%= "User Id:"%></p>
    <p class="card-text" id="text-div-black"><%= @events.user_id %></p>
    <p class="card-text" id="text-div-blue"><%= "Name:"%></p>
    <p class="card-text" id="text-div-black"><%= @events.user.profile.name %></p>
    <p class="card-text" id="text-div-blue"><%= "Last Name:"%></p>
    <p class="card-text" id="text-div-black"><%= @events.user.profile.last_name  %></p>
    <p class="card-text" id="text-div-blue"><%= "Location:"%></p>
    <p class="card-text" id="text-div-black"><%= @events.location  %></p>
    <p class="card-text" id="text-div-blue"><%= "Date:"%></p>
    <p class="card-text" id="text-div-black"><%= @events.date  %></p>
    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
        <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit",  edit_event_path(@events) %></button>
      </div>
    </div>
    <button class="btn btn-primary" id="delete_button_event">Delete</button>
  </div>
</div>

<div class="row" id="second-div-particular-event">
  <div class="col-sm-6">
    <div class="card" id="div-event-list-user">
      <h2  id="text-div-black">Event List User</h2>
      <td><button class="btn btn-primary" id="add_button_event">Add</button></td>
      <div class="card-body">
        <table class="table table-striped table-dark">
          <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Last Name</th>
          </tr>
          </thead>
          <tbody>
          <% @event_list_user.each do |event_list| %>
          <tr>
            <td><%= event_list.user.profile.name %></td>
            <td><%= event_list.user.profile.last_name %></td>
            <td><button class="btn btn-primary">Edit</button></td>
            <td><button class="btn btn-primary" id="delete_button_event">Delete</button></td>
          </tr>
          <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card" id="div-comments-event">
      <h2  id="text-div-black">Comments</h2>
      <td><button class="btn btn-primary" id="add_button_event">Add</button></td>
      <div class="card-body">
        <% @event_comments.each do |comment| %>
          <p class="card-text" id="text-div-black"><%= comment.text_comment %></p>
          <button class="btn btn-primary">Edit</button>
          <button class="btn btn-primary" id="delete_button_event">Delete</button>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="d-flex justify-content-between align-items-center">
  <div class="btn-group">
    <button type="button" class="btn btn-outline-dark"><%= link_to "back", events_path %></button>
  </div>
</div>
