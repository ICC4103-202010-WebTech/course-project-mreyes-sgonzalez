<p id="notice"><%= notice %></p>
<h1>Event</h1>
<link rel="stylesheet" type="text/css" href="event_id_view.css">


<body>

<table>
  <thead>
  <th>Title</th>
  <th>Description</th>
  <th>Event Flag</th>
  <th>User ID</th>
  <th>Name</th>
  <th>Last Name</th>
  <th>Location</th>
  <th>Date</th>
  </thead>

  <tbody>
  <td><%= @events.title %></td>
  <td><%= @events.description %></td>
  <td><%= @events.event_flag %></td>
  <td><%= @events.user_id %></td>
  <td><%= @event_join_users.user.profile.name %></td>
  <td><%= @event_join_users.user.profile.last_name %></td>
  <td><%= @events.location %></td>
  <td><%= @events.date %></td>
  <td><button class="btn btn-primary" id="edit_button_event">Edit</button></td>
  <td><button class="btn btn-primary" id="delete_button_event">Delete</button></td>

  </tbody>
</table>

<table>
  <h2>Event List User</h2>
  <td><button class="btn btn-primary" id="add_button_event">Add</button></td>
  <tbody>
  <% @event_list_user.each do |event_list| %>
    <tr>
      <td><%= event_list.user.profile.name %></td>
      <td><button class="btn btn-primary">Edit</button></td>
      <td><button class="btn btn-primary" id="delete_button_event">Delete</button></td>
    </tr>
  <% end %>
  </tbody>

</table>


<table>
  <h2>Comments</h2>
  <td><button class="btn btn-primary" id="add_button_event">Add</button></td>
  <tbody>
  <% @event_comments.each do |comment| %>
    <tr>
      <td><%= comment.text_comment %></td>
      <td><button class="btn btn-primary">Edit</button></td>
      <td><button class="btn btn-primary" id="delete_button_event">Delete</button></td>
    </tr>
  <% end %>
  </tbody>

</table>
<br>
<button class="btn btn-primary" id="back_button"><%= link_to 'Back', events_path %></button>


</body>
