<div class="row-account">
  <div class="card-account-information">

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
        </div>
        <div class="carousel-item">
          <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
        </div>
        <div class="carousel-item">
          <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div class="card-body">
      <p>&nbsp;&nbsp;&nbsp;&nbsp; <b>Name:</b>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @current_profile.profile.name %></p>
      <hr>
      <p>&nbsp;&nbsp;&nbsp;&nbsp; <b>Last Name:</b>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @current_profile.profile.last_name %></p>
      <hr>
      <p>&nbsp;&nbsp;&nbsp;&nbsp; <b>Date of Birth:</b>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @current_profile.profile.dob %></p>
      <hr>
      <p>&nbsp;&nbsp;&nbsp;&nbsp; <b>Phone:</b>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @current_profile.profile.phone %></p>
      <hr>
      <p>&nbsp;&nbsp;&nbsp;&nbsp; <b>Address:</b>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @current_profile.profile.address %></p>
      <hr>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_profile_path(@current_profile) %></button>
        </div>
      </div>
    </div>
  </div>

  <div class="account-line">
    <p> <br> </p>
  </div>

  <div class="card-account-event-invited">
    <div class="card-body">
      <h2 class="card-title">Events invited</h2>
      <p>Events to which the user has been invited</p>
      <div id="profile-scroll">
        <table class="table table-striped table-dark">
          <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">Title</th>
          </tr>
          </thead>
          <tbody>
          <% i=0 %>
          <% @event_user_invited.each do |event_user_invited| %>
            <tr>
              <td><%= i+=1 %></td>
              <td><%= event_user_invited.event.title %></td>
              <td><button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View",  event_path(event_user_invited.event.id) %></button></td></td>
            </tr>
          <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="account-line">
    <p> <br> </p>
  </div>

  <div class="card-account-event-invited">
    <div class="card-body">
      <h2 class="card-title">Created Events</h2>
      <p> The following list show the created events by this profile</p>
      <div id="profile-scroll">
        <table class="table table-striped table-dark">
          <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">Title</th>
            <th></th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% i=0 %>
          <% @created_events.each do |event_user_invited| %>
            <tr>
              <td><%= i+=1 %></td>
              <td><%= event_user_invited.title %></td>
              <td><button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit",  edit_event_path(event_user_invited.id) %></button></td>
              <td><button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View",  event_path(event_user_invited.id) %></button></td></td>
            </tr>
          <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
