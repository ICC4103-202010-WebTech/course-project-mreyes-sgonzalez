<div class="card-deck" id="centre-data-profile">
  <div class="card">
    <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
    <div class="card-body profile-show">
      <p><b>Name:</b>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @current_profile.profile.name %></p>
      <hr>
      <p><b>Last Name:</b>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @current_profile.profile.last_name %></p>
      <hr>
      <p><b>Date of Birth:</b>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @current_profile.profile.dob %></p>
      <hr>
      <p><b>Phone:</b>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @current_profile.profile.phone %></p>
      <hr>
      <p><b>Address:</b>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @current_profile.profile.address %></p>
      <hr>
      <div class="d-flex justify-content-between align-items-center">
        <% if current_user.admin %>
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_profile_path(@profile) %></button>
          </div>
        <% end %>
      </div>
    </div>
  </div>



  <div class="card" id="black-text">
    <div class="card-body">
      <h5 class="card-title">Events invited</h5>
      <p>Events to which the user has been invited</p>
      <div id="profile-scroll">
        <table class="table table-striped table-dark">
          <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">Title</th>
          </tr>
          </thead>
          <tbody>
          <% i=0 %>
          <% @event_user_invited.each do |event_user_invited| %>
            <tr>
              <td><%= i+=1 %></td>
              <td><%= event_user_invited.event.title %></td>
            </tr>
          <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>



  <div class="card" id="black-text">
    <div class="card-body">
      <h5 class="card-title">Created Events</h5>
      <p> The following list show the created events by this profile</p>
      <div id="profile-scroll">
        <table class="table table-striped table-dark">
          <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">Title</th>
          </tr>
          </thead>
          <tbody>
          <% i=0 %>
          <% @created_events.each do |event_user_invited| %>
            <tr>
              <td><%= i+=1 %></td>
              <td><%= event_user_invited.title %></td>
            </tr>
          <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>