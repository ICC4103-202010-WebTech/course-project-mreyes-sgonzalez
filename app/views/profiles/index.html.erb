<p id="notice"><%= notice %></p>

<h1>Profiles</h1>
<td><button class="btn btn-primary" id="add_button_event">Add</button></td>
<link rel="stylesheet" type="text/css" href="event_id_view.css">

<div class="row">
  <% @profiles.each do |profile| %>
    <div class="col-md-4" id="center-div-home">
      <div class="card mb-4 shadow-sm">
        <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
        <div class="card-body">
          <p class="card-text"><%= link_to profile.name, profile %></p>
          <p class="card-text" id="text-div-black"><%= profile.last_name %></p>
          <p class="card-text" id="text-div-black"><%= profile.phone %></p>
          <p class="card-text" id="text-div-black"><%= profile.dob %></p>
          <p class="card-text" id="text-div-black"><%= profile.address %></p>
          <button class="btn btn-primary" id="edit_button_event"><%= link_to "Edit",  edit_path %></button>
          <button class="btn btn-primary" id="delete_button_event">Delete</button>
        </div>
      </div>
    </div>
  <% end %>
</div>