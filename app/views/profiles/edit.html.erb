<h1>Editing Profile</h1>

<div class="row">
  <!-- Begin: Move this to a partial view -->
  <div class="col-md-4" id="center-div">
    <div class="card mb-4 shadow-sm">
      <%= image_tag("thumbnail.svg", class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>

      <div class="card-body">
        <%= form_with model: @profile do |form| %>
          <div class="form-group" id="text-div-blue">
            <%= form.label :name %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group" id="text-div-blue">
            <%= form.label :last_name %>
            <%= form.text_field :last_name, class: "form-control" %>
          </div>
          <div class="form-group" id="text-div-blue">
            <%= form.label :date_of_birth %>
            <%= form.datetime_local_field :dob %>
          </div>
          <div class="form-group" id="text-div-blue">
            <%= form.label :phone %>
            <%= form.text_field :phone %>
          </div>
          <div class="form-group" id="text-div-blue">
            <%= form.label :address %>
            <%= form.text_field :address %>
          </div>
          <div class="form-group">
            <%= form.submit "Save Changes", class: ["btn", "btn-primary"] %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- End: Move this to a partial view -->
  </div>
</div>




<%= render 'form', profile: @profile %>

<%= link_to 'Show', @profile %> |
<%= link_to 'Back', profiles_path %>
